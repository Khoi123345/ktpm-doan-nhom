{
  "name": "selenium-tests",
  "version": "1.0.0",
  "description": "Selenium WebDriver tests for Bookstore application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha 'tests/**/*.spec.js' --timeout 30000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=test-report",
    "test:login": "mocha 'tests/login.spec.js' --timeout 30000",
    "test:home": "mocha 'tests/home.spec.js' --timeout 30000",
    "test:parallel": "mocha 'tests/**/*.spec.js' --timeout 30000 --parallel",
    "test:local": "cross-env HEADLESS=false BASE_URL=http://localhost:3000 ADMIN_URL=http://localhost:3001 API_URL=http://localhost:5000/api mocha 'tests/**/*.spec.js' --timeout 30000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=test-report",
    "test:local:home": "cross-env HEADLESS=false BASE_URL=http://localhost:3000 mocha 'tests/home.spec.js' --timeout 30000",
    "test:local:login": "cross-env HEADLESS=false BASE_URL=http://localhost:3000 ADMIN_URL=http://localhost:3001 mocha 'tests/login.spec.js' --timeout 30000"
  },
  "keywords": [
    "selenium",
    "webdriver",
    "testing",
    "e2e"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chai": "^5.1.2",
    "dotenv": "^16.4.7",
    "selenium-webdriver": "^4.27.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "cross-env": "^7.0.3",
    "mocha": "^11.0.1",
    "mochawesome": "^7.1.3"
  }
}
