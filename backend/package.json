{
  "name": "bookstore-backend",
  "version": "1.0.0",
  "description": "Backend API for Online Bookstore",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --watch",
    "test:security": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest tests/security --detectOpenHandles --forceExit",
    "test:performance": "artillery run tests/performance/artillery-config.yml --output tests/performance/report.json",
    "test:performance:quick": "artillery run tests/performance/artillery-quick.yml",
    "test:performance:spike": "artillery run tests/performance/artillery-spike.yml",
    "test:performance:production": "artillery run tests/performance/artillery-production.yml --output tests/performance/report-prod.json"
  },
  "keywords": [
    "bookstore",
    "ecommerce",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "artillery": "^2.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.4.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
